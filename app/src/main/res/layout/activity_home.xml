<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/background_menu"
                android:id="@+id/activity_main"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                tools:context="himka.gamehimka.HomeActivity">

    <ImageView
        android:id="@+id/iv_math_play"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_math_play"/>

    <ImageView
        android:id="@+id/iv_play"
        android:layout_alignLeft="@id/iv_math_play"
        android:layout_alignRight="@id/iv_math_play"
        android:layout_below="@id/iv_math_play"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_play"/>

    <ImageView
        android:layout_marginLeft="30dp"
        android:id="@+id/iv_character1"
        android:layout_below="@id/iv_play"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_character_1"/>

    <ImageView
        android:layout_alignTop="@id/iv_play"
        android:id="@+id/iv_character2"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/iv_character1"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_character1"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_character_2"/>

    <ImageView
        android:scaleType="fitXY"
        android:layout_alignTop="@id/iv_play"
        android:id="@+id/iv_character3"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/iv_character2"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_alignBottom="@id/iv_character1"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_character_3"/>

    <ImageView
        android:id="@+id/iv_character4"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/iv_character3"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_alignBottom="@id/iv_character1"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_character_4"/>

</RelativeLayout>
