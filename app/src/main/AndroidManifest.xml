<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="himka.gamehimka">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.HomeActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.LevelSelectionActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="himka.gamehimka.LevelSelection" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.SubLevelSelectionActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="himka.gamehimka.SubLevelSelection" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.EasyQuestionActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="himka.gamehimka.EasyQuestionActivity" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.HardQuestionActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="himka.gamehimka.HardQuestionActivity" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.MultipleImageSelectionActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="himka.gamehimka.soal.PilihanGandaActivity" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.SpeechToTextExampleActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="himka.gamehimka.soal.SpeechToTextExampleActivity" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.TestActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="himka.gamehimka.soal.PilihanGandaActivity" />
            </intent-filter>
        </activity>
    </application>

</manifest>